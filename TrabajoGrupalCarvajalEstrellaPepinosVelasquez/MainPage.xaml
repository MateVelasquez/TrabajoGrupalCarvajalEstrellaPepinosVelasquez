             x:Class="TrabajoGrupalCarvajalEstrellaPepinosVelasquez.MainPage">

    <AbsoluteLayout Margin="20" BackgroundColor="LightGray">
        <BoxView Color="Blue"
                 AbsoluteLayout.LayoutBounds="0.5,0,100,40"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView Color="Green"
                 AbsoluteLayout.LayoutBounds="0,0.5,40,100"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView Color="Red"
                 AbsoluteLayout.LayoutBounds="1,0.5,40,100"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <BoxView Color="Black"
                 AbsoluteLayout.LayoutBounds="0.5,1,100,40"
                 AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Label Text="Texto Centrado"
               FontFamily="OpenSans"
               FontAttributes="Bold"
               FontSize="40"
               AbsoluteLayout.LayoutBounds="0.6,0.5,200,100"
               AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
